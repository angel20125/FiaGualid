<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/idImageViewItemFoto"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/articulo512" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/idTVItemCodigoArticulo"
                android:text="Codigo: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:hint="Codigo"
                android:textSize="20dp" />
            <TextView
                android:id="@+id/idTVItemNombreArticulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Nombre: "
                android:hint="Nombre"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/idTVItemCategoriaArticulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="CategorÃ­a: "
                android:hint="Categoria"
                android:textSize="15dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/idTVItemCantidadArticulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Cantidad: "
                android:hint="Cantidad"
                android:textSize="15dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/idTVItemPrecioArticulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Precio: "
                android:hint="Precio"
                android:textSize="20dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/idTVItemEstadoArticulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:hint="Estado: "
                android:textSize="15dp"
                android:textStyle="bold" />

        </LinearLayout>
        <!-- dibuaj una linea-->


    </LinearLayout>

    <TextView
        android:layout_width="1000dp"
        android:layout_height="2dp"
        android:background="@color/colorPrimary" />
</LinearLayout>
