<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/idImageViewItemFoto"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/ventas512" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/idTVItemIdVentasVentas"
                android:text="Codigo de venta: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:hint="Codigo de venta"
                android:textSize="15dp" />
            <TextView
                android:id="@+id/idTVItemIdClienteVentas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Codigo Cliente: "
                android:hint="Nombre"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/idTVItemIdArticulosVentas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Codigo Articulo: "
                android:hint="Codigo Articulo"
                android:textSize="15dp" />
            <TextView
                android:id="@+id/idTVItemTipo_PagoVentas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Tipo Pago: "
                android:hint="Tipo Pago"
                android:textSize="15dp"
                 />
            <TextView
                android:id="@+id/idTVItemSerie_ComprobanteVentas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Serie Comprobante: "
                android:hint="Serie Comprobante: "
                android:textSize="15dp" />
            <TextView
                android:id="@+id/idTVItemNro_ComprobanteVentas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:hint="Nro Comprobante: "
                android:textSize="15dp" />
            <TextView
                android:id="@+id/idTVItemFecha_HoraVentas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Fecha: "
                android:hint="Fecha: "
                android:textSize="15dp" />
            <TextView
                android:id="@+id/idTVItemTotal_VentaVentas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Total_Venta: "
                android:hint="Total_Venta: "
                android:textSize="15dp" />
            <TextView
                android:id="@+id/idTVItemEstadoVentas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Estado: "
                android:hint="Estado: "
                android:textSize="15dp" />

        </LinearLayout>
        <!-- dibuaj una linea-->


    </LinearLayout>

    <TextView
        android:layout_width="1000dp"
        android:layout_height="2dp"
        android:background="@color/colorPrimary" />
</LinearLayout>